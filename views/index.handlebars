<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-4">The SKI Scraper</h1>
    <p class="lead">Mongo article scraper app.</p>
    <a href="/scrape" class="btn btn-primary">Scrape</a>
  </div>
</div>
<div class="container">
<ul>
  {{#each articles}}
  <div class='card'>
    <div class='card-body'>
      <p data-id={{this.id}}>{{this.title}}</p>
      <p></p><a target="_blank" href='https://www.skimag.com/{{this.link}}'>View Orginal Article</a></p>
      <button
        data-id={{this.id}} type='button' class='btn btn-primary make-note'
        data-toggle='modal' data-target='#noteModal'>Make Note</button>
        </div>
        </div>
  {{/each}}
</ul>
</div>

<!-- Modal -->
<div class="modal fade" id="noteModal" tabindex="-1" role="dialog"
 aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-body">
        <div id="notes"></div>
      </div>
      </div>
    </div>
  </div>
</div>